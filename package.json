{
  "name": "angular2-base",
  "version": "1.0.0",
  "config": {
    "dev": "dev",
    "step1": "step1"
  },
  "scripts": {
    "lite": "lite-server",
    "postinstall": "typings install && npm prune",
    "gulp": "gulp",
    "start": "concurrently \"npm run gulp\" \"npm run lite\" ",
    "typings": "typings",
    "build": "npm run step1 && npm run step2 && npm run step3",
    "step1": "npm run cleancss && npm run htmlmin && copyfiles -u 1 'dev/**/*.ts' step1 && copyfiles 'dev/**/*.json' step1",
    "step2": "npm run inline &&  copyfiles 'step1/**/*.json' step2",
    "step3": "npm run rollup && npm run tsc && npm run uglify",
    "cleancss": "node ./buildScripts/css-minify.js dev step1",
    "htmlmin": "node ./buildScripts/html-minify.js dev step1",
    "inline": "node ./buildScripts/inline-template.js step1 step2",
    "rollup": "rollup -c rollup.config.js",
    "tsc": "tsc --out ./dist/bundle.js --target es5  --allowJs dist/build.es2015.js",
    "uglify": "uglifyjs dist/bundle.js --screw-ie8 --compress --mangle --output dist/bundle.min.js"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/common": "2.0.0-rc.6",
    "@angular/compiler": "2.0.0-rc.6",
    "@angular/compiler-cli": "0.6.0",
    "@angular/core": "2.0.0-rc.6",
    "@angular/forms": "2.0.0-rc.6",
    "@angular/http": "2.0.0-rc.6",
    "@angular/platform-browser": "2.0.0-rc.6",
    "@angular/platform-browser-dynamic": "2.0.0-rc.6",
    "@angular/router": "3.0.0-rc.2",

    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.11",
    "rxjs-es": "^5.0.0-beta.11",

    "systemjs": "0.19.27",
    "zone.js": "^0.6.17",

    "slug": "^0.9.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.7",
    "babel-preset-es2015-rollup": "^1.1.1",
    "clean-css": "^3.4.19",
    "concurrently": "^2.2.0",
    "copyfiles": "^1.0.0",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-clean-css": "^2.0.6",
    "gulp-sass": "^2.3.1",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-typescript": "^2.10.0",
    "html-minifier": "^3.0.1",
    "lite-server": "^2.2.2",
    "postcss-cli": "^2.5.2",
    "rimraf": "^2.5.4",
    "rollup": "^0.34.1",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-json": "^2.0.1",
    "rollup-plugin-node-resolve": "^1.7.1",
    "rollup-plugin-typescript": "^0.7.7",
    "systemjs-builder": "^0.15.16",
    "typings": "^1.3.2",
    "uglifyjs": "^2.4.10"
  }
}
